void mouseDragged() { // Keep writing or erasing
  Hexagon h = getHex(mouseX, mouseY);
  h.set(initial.type);
}

void mousePressed() { // Writes or erases
  initial = getHex(mouseX, mouseY);
  initial.set((initial.type +1)%4);
  mouseDragged();
  for(int i = 0; i < 3; i++){
    for(int j = 0; j < 7; j++){
      fill(0);
      //if (survivalButtons[i][j].pressed()) survivalButtons[i][j].update();
      if (survivalButtons[i][j].pressed()) ellipse(survivalButtons[i][j].x,
                                                    survivalButtons[i][j].y,
                                                    20,20);
      else if (birthButtons[i][j].pressed()) birthButtons[i][j].update();
    }
  }
}

void keyPressed() {
  if (key == ' ') {
    play = ! play;
  }
  if (key == 'r' || key == 'R')
    initGrid();

  if (key == 'i' || key == 'I')
    regra = 0;
  if (key == 'o' || key == 'O')
    regra = 1;
  if (key == 'p' || key == 'P')
    regra = 2;
  
  if (key == CODED) {
    if (keyCode == RIGHT)
      step = true;
  }
}